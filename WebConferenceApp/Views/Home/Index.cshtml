@{
    ViewData["Title"] = "Home Page";
}
<div class="w3-display-container">
    <header class="w3-panel w3-center w3-opacity">
        <h1>Header</h1>
        <div class="w3-padding-32">
            <div class="w3-bar">
                <div class="w3-bar-item">

                    <div class="w3-row-padding" style="margin-left:15%;">
                        <div class=" w3-third">
                            <div class="w3-card w3-grey">
                                <div class="w3-display-container">
                                    <img src="~/images/default-placeholder.png" alt="Light" style="width:100%" />
                                    <div class="w3-padding w3-display-bottommiddle">
                                        Провести занятие
                                    </div>
                                </div>
                                <a asp-action="index" asp-controller="home" asp-area="cabinet" class="w3-button w3-block">Создание</a>
                            </div>
                        </div>

                        <div class="w3-third w3-right" style="margin-right:15%;">
                            <div class="w3-card w3-grey">

                                <div class="w3-display-container">
                                    <img src="~/images/default-placeholder.png" alt="Light" style="width:100%" />
                                    <div class="w3-padding w3-display-bottommiddle">
                                        Просмотр занятий
                                    </div>
                                </div>
                                <a asp-action="viewer" asp-controller="home" class="w3-button w3-block">Просмотр</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="w3-row-padding w3-center">
        <h3>Рекомендации</h3>
        @for (int i = 0; i <= 2; i++)
    {
        <div class="w3-col s3">
            <div class="w3-card w3-grey w3-margin" style="width:100%;">
                <div class="w3-display-container w3-text-white">
                    <img src="~/images/default-placeholder.png" class="w3-opacity-max" alt="Light" style="width:100%;" />
                    <div class="w3-padding w3-display-topleft">
                        Тема: Тут тема @i<br />
                        Дата: 14.04.2018<br />
                        Стоимость: 200 <i class="fas fa-ruble-sign"></i>
                    </div>
                    <div class="w3-padding w3-display-bottomleft">
                        Автор: Keily Wong
                    </div>
                </div>
                <a asp-action="roomdetails" asp-controller="home" class="w3-button w3-block w3-dark-gray">Подробнее</a>
            </div>
        </div>
}

    </div>
</div>

